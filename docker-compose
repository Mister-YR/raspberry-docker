# sudo docker logs -f transmission
version: "3.7"
services:
  transmission:
    image: lscr.io/linuxserver/transmission
    container_name: transmission-pi
    environment:
      - PUID=1000 
      - PGID=1000 
      - TZ=Europe/Kiev 
    volumes:
      - /plex-media/transmission-config:/config 
      - /plex-media/movie:/downloads/complete
      - /plex-media/incomplete:/downloads/incomplete
    ports:
      - 9091:9091 
      - 51413:51413
      - 51413:51413/udp
    restart: unless-stopped
# plex
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex-pi
    network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - VERSION=docker
      - PLEX_CLAIM= #optional
    volumes:
      - /plex-media/config:/config
      - /plex-media/tv:/tv
      - /plex-media/movie:/movies
    restart: unless-stopped 
# partainer
  portainer:
    image: portainer/portainer-ce:2.17.0-alpine # Replace 2.11.0 with the latest version.
    container_name: portainer-pi
    command: -H unix:///var/run/docker.sock
    restart: always
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /partainer:/data
    ports:
      - 9443:9443
    healthcheck:
      test: ['CMD', 'wget', '--spider', 'localhost:9000']
      interval: 15s # Amount of time after it starts checking for readiness
#heimdall
  heimdall:
    image: lscr.io/linuxserver/heimdall:latest
    container_name: heimdall-pi
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/Kiev
    volumes:
      - /heimdall:/config
    ports:
      - 80:80
      - 443:443
    restart: unless-stopped
# run docker via local image (Create previously via Dockerfile)
  image: root/jenkins
    container_name: jenkins-pi
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/Kiev
    volumes:
      - /jenkins:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
      - /usr/local/bin/docker:/usr/local/bin/docker
    ports:
      - 8080:8080
      - 50000:50000
    restart: unless-stopped